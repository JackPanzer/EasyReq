    private void jckSeccionActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jckSeccionActionPerformed
        // TODO add your handling code here:
        jckSeccion.setSelected(true);
        jckApendice.setSelected(false);
        
        if(jtxNombre.getText().equals(""))
        {
            jbtAceptar.setEnabled(false);
        }
        else
        {
            jbtAceptar.setEnabled(true);
        }
    }//GEN-LAST:event_jckSeccionActionPerformed

    private void jtxNombreKeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jtxNombreKeyReleased
        // TODO add your handling code here:
        if(jtxNombre.getText().equals(""))
        {
            jbtAceptar.setEnabled(false);
        }
        else
        {
            if(jckApendice.isSelected() || jckSeccion.isSelected())
            {
                jbtAceptar.setEnabled(true);
            }
            else
            {
                jbtAceptar.setEnabled(false);
            }
        }
    }//GEN-LAST:event_jtxNombreKeyReleased

    private void jckApendiceActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jckApendiceActionPerformed
        // TODO add your handling code here:
        jckSeccion.setSelected(false);
        jckApendice.setSelected(true);
        
        if(jtxNombre.getText().equals(""))
        {
            jbtAceptar.setEnabled(false);
        }
        else
        {
            jbtAceptar.setEnabled(true);
        }
    }//GEN-LAST:event_jckApendiceActionPerformed

private void jbtAceptarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtAceptarActionPerformed
// TODO add your handling code here:
    if(nodo != null)
        {   //Apendice 
            if(!this.editar)
            {
                Apendice n_Apend = new Apendice();
                n_Apend.addObserver(this.padre);
                n_Apend.setNombre(this.jtxNombre.getText());
                n_Apend.setAutor((Participante)this.jcmbAutor.getSelectedItem());
                if(jckSeccion.isSelected()){
                    n_Apend.setTipo(false);
                }else if(jckApendice.isSelected()){
                    n_Apend.setTipo(true);
                }
                n_Apend.setComentario(this.jtxaComentario.getText());
                this.padre.getDoc().Crear_Apendice(n_Apend);
                DefaultMutableTreeNode child = new DefaultMutableTreeNode(n_Apend);
                nodo.add(child);
                this.padre.añadir_cosa(child);
                n_Apend.notificar_observer();
            }
            else
            {
                Apendice n_Apend=(Apendice)nodo.getUserObject();
                n_Apend.setNombre(this.jtxNombre.getText());
                n_Apend.setAutor((Participante)this.jcmbAutor.getSelectedItem());
                if(jckSeccion.isSelected()){
                    n_Apend.setTipo(false);
                }else if(jckApendice.isSelected()){
                    n_Apend.setTipo(true);
                }
                n_Apend.setComentario(this.jtxaComentario.getText());
                n_Apend.notificar_observer();
            }
            padre.setEnabled(true);
            this.dispose();
        }    
}//GEN-LAST:event_jbtAceptarActionPerformed

