    public jfrApendice(Interfaz padre, DefaultMutableTreeNode nodo,boolean n_editar) {
        initComponents();
        this.nodo = nodo;
        this.padre = padre;
        for(int i=0;i<this.padre.getDoc().getPart_creados().size();i++)
        {
            this.jcmbAutor.addItem(this.padre.getDoc().getPart_creados().get(i));
        }
        this.editar=n_editar;
        if(n_editar)this.inicializar_edicion();
    }

    private void inicializar_edicion()
    {
        Apendice ap=(Apendice) this.nodo.getUserObject();
        this.jtxNombre.setText(ap.getNombre());
        this.jcmbAutor.setSelectedItem(ap.getAutor());
        if(ap.isTipo())
            this.jckApendice.setSelected(true);
        else
            this.jckSeccion.setSelected(true);
        this.jtxaComentario.setText(ap.getComentario());
    }
